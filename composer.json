{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "barryvdh/laravel-debugbar": "^2.3",
        "barryvdh/laravel-dompdf": "^0.8.3",
        "doctrine/dbal":"~2.3",
        "filp/whoops": "~2.0",
        "intervention/image": "^2.3",
        "irazasyed/telegram-bot-sdk": "^3.0",
        "laravel/framework": "5.5.*",
        "laravel/tinker": "~1.0",
        "laravelcollective/html": "^5.4",
        "nao-pon/flysystem-google-drive": "~1.1",
        "paypal/rest-api-sdk-php": "^1.11",
        "spatie/laravel-backup": "*.*.*",
        "styde/html": "~1.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "fahim/laravel5-paypal-ipn": "1.0.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": ["database"],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": ["php -r \"file_exists('.env') || copy('.env.example', '.env');\""],
        "post-create-project-cmd": ["php artisan key:generate"],
        "post-install-cmd": ["Illuminate\\Foundation\\ComposerScripts::postInstall", "php artisan optimize"],
        "post-update-cmd": ["Illuminate\\Foundation\\ComposerScripts::postUpdate", "php artisan optimize"]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
